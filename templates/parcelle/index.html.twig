{% extends 'base.html.twig' %}

{% block title %}Parcelle index{% endblock %}

{% block body %}
<div class="hero-wrap hero-bread" style="background-image: url('{{ asset('FrontOffice/images/bg_1.jpg') }}');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs"><span class="mr-2"><a href="{{ path('app_home') }}">Home</a></span> <span>Liste Des Parcelle</span></p>
                <h1 class="mb-0 bread">Liste Des Parcelles</h1>
            </div>
        </div>
    </div>
</div>

    <section class="ftco-section ftco-degree-bg">
        <section class="container my-5">
        <table class="table table-striped mt-4">
            <thead class="thead-dark">
                <tr>
                    <th>Nom</th>
                    <th>Superficie</th>
                    <th>Localisation</th>
                    <th>Cultures</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for parcelle in parcelles %}
                    <tr>
                        <td>{{ parcelle.nom }}</td>
                        <td>{{ parcelle.superficie }} ha</td>
                        <td>{{ parcelle.localisation }}</td>
                        <td>
                            {% if parcelle.cultureParcelles is empty %}
                                <span class="text-muted">Aucune culture</span>
                            {% else %}
                                <ul class="list-group">
                                    {% for culture in parcelle.cultureParcelles %}
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <strong>{{ culture.typeCulture }}</strong> - 
                                                Plantée le <span class="text-success">{{ culture.datePlantation|date('d/m/Y') }}</span>, 
                                                Récolte prévue le <span class="text-danger">{{ culture.dateRecolte|date('d/m/Y') }}</span>
                                            </div>
                                            <a href="{{ path('app_culture_parcelle_show', {'id': culture.id}) }}" class="btn btn-sm btn-primary">Voir</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% endif %}
                        </td>
                        <td class="d-flex flex-column gap-2">
                            <a href="{{ path('app_parcelle_show', {'id': parcelle.id}) }}" class="btn btn-info btn-sm">Deatils</a>
                            <a href="{{ path('app_parcelle_edit', {'id': parcelle.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                            <a href="{{ path('culture_new', {'parcelle_id': parcelle.id}) }}" class="btn btn-success btn-sm">Ajouter une culture</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">Aucune parcelle trouvée</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a href="{{ path('app_parcelle_new') }}" class="btn btn-primary">Créer une nouvelle parcelle</a>
        </div>
    </section>
    </div>
</section>
{% endblock %}
