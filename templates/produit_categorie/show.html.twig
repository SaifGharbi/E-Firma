{% extends is_granted('ROLE_ADMIN') ? 'base_admin.html.twig' : 'base.html.twig' %}

{% block title %}Category Details{% endblock %}

{% block body %}
    <div class="container">
        <h1>Category Details</h1>
        <table class="table">
            <tbody>
                <tr>
                    <th>Name</th>
                    <td>{{ produit_categorie.nom }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ produit_categorie.description }}</td>
                </tr>
            </tbody>
        </table>

        {% if is_granted('ROLE_AGRICULTEUR') %}
            <div class="action-buttons">
                <a href="{{ path('app_produit_categorie_edit', {'id': produit_categorie.id}) }}" 
                   class="btn btn-primary">Edit</a>
                {{ include('produit_categorie/_delete_form.html.twig') }}
            </div>
        {% endif %}

        <a href="{{ path('app_produit_categorie_index') }}" class="btn btn-secondary">Back to list</a>
    </div>
{% endblock %}
