{% extends 'base_admin.html.twig' %}

{% block title %}Détails de la Catégorie{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg p-4 rounded-custom border-0">
                    <div class="card-body">
                        <h2 class="card-title text-center fw-bold text-uppercase text-success">Détails de la Catégorie</h2>

                        <table class="table table-bordered mt-4">
                            <tbody>

                            <tr>
                                <th class="bg-light">Nom</th>
                                <td>{{ produit_categorie.nom }}</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Description</th>
                                <td>{{ produit_categorie.description }}</td>
                            </tr>
                            </tbody>
                        </table>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_produit_categorie_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour à la liste
                            </a>
                            <a href="{{ path('app_produit_categorie_edit', {'id': produit_categorie.id}) }}" class="btn btn-success">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                        </div>

                        <div class="text-center mt-3">
                            {{ include('produit_categorie/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- FontAwesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- Custom Styles -->
    <style>
        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-radius: 15px;
            background: linear-gradient(to bottom, #ffffff, #f8f9fa);
        }

        .card:hover {
            transform: scale(1.02);
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.15);
        }

        .btn {
            transition: 0.3s;
            font-weight: bold;
        }

        .btn:hover {
            transform: translateY(-2px);
        }
    </style>
{% endblock %}