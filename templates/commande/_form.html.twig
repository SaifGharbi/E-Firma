<div class="container py-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-4 text-primary">Order Summary</h2>

        <div class="table-responsive">
            <table class="table table-bordered text-center">
                <thead class="bg-light">
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Subtotal</th>
                </tr>
                </thead>
                <tbody>
                {% for item in commandeItems %}
                    <tr>
                        <td>{{ item.produit.nom }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.produit.prix }} TND</td>
                        <td><strong>{{ item.produit.prix * item.quantity }} TND</strong></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <h4 class="text-secondary">Order Date:</h4>
            <h4 class="text-dark">{{ "now"|date("Y-m-d") }}</h4>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-2">
            <h3 class="text-primary">Total:</h3>
            <h3 class="text-success"><strong>{{ total }} TND</strong></h3>
        </div>

        <hr class="my-4">

        <div class="form-group text-center">
            {{ form_start(form) }}
            {{ form_row(form.total, { attr: { class: 'd-none', value: total, readonly: 'readonly' } }) }}
            {{ form_row(form.date, { attr: { class: 'd-none', value: "now"|date("Y-m-d"), readonly: 'readonly' } }) }}
            <button type="submit" href="{{ path('app_livraison_new') }}" class="btn btn-primary btn-lg w-100">Confirm Order</button>
            {{ form_end(form) }}
        </div>

        <div class="text-center mt-3">
            <a href="{{ path('app_commande_index') }}" class="btn btn-outline-secondary">Back to Cart</a>
        </div>
    </div>
</div>
