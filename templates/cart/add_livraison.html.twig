{% extends 'base.html.twig' %}

{% block title %}Add Delivery Information{% endblock %}

{% block body %}
    <section class="ftco-section">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-10">
                    <h2 class="mb-4 text-center text-success fw-bold">Add Delivery Information for Order #{{ commandeId }}</h2>

                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    {% if form_errors(form) %}
                        <div class="alert alert-danger">
                            {{ form_errors(form) }}
                        </div>
                    {% endif %}

                    <div class="mb-3">
                        {{ form_label(form.adresse, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Enter delivery address'}}) }}
                        {% if form_errors(form.adresse) %}
                            <small class="text-danger">{{ form_errors(form.adresse) }}</small>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.dateLivraison, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.dateLivraison, {'attr': {'class': 'form-control'}}) }}
                        {% if form_errors(form.dateLivraison) %}
                            <small class="text-danger">{{ form_errors(form.dateLivraison) }}</small>
                        {% endif %}
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-save me-2"></i> Save Delivery Information
                        </button>
                        <a href="{{ path('app_produit_index') }}" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i> Back to Products
                        </a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>

    <style>
        .form-control:focus {
            border-color: #28a745;
            box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
        }

        .form-label {
            font-weight: 600;
            color: #333;
        }

        .alert-danger {
            border-radius: 0.375rem;
        }

        .btn-lg {
            font-size: 1rem;
            padding: 0.5rem 1.5rem;
        }
    </style>
{% endblock %}