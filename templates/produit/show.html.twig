{# FrontOffice/product_detail.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <section class="ftco-section product-detail-section">
        <div class="container">
            <div class="row justify-content-center mb-5 pb-3">
                <div class="col-md-12 heading-section text-center ftco-animate">
                    <span class="subheading">Product</span>
                    <h2 class="mb-4">{{ produit.nom }}</h2>
                    <p>{{ produit.description }}</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 col-lg-6 ftco-animate">
                    <div class="product-image">
                        <a href="#" class="img-prod">
                            <img class="img-fluid" src="{{ asset('FrontOffice/images/product-2.jpg') }}" alt="{{ produit.nom }}">
                            <div class="overlay"></div>
                        </a>
                    </div>
                </div>

                <div class="col-md-6 col-lg-6 ftco-animate">
                    <div class="product-details">
                        <h3>{{ produit.nom }}</h3>
                        <p class="price">
                            <span class="mr-2 price-dc">{{ produit.prix }} TND</span>
                        </p>
                        <p>{{ produit.description }}</p>
                        <div class="product-actions d-flex align-items-center">
                            <a href="{{ path ('app_commande_new') }}" class="btn btn-outline-secondary buy-now d-flex justify-content-center align-items-center mx-1">
                                <span><i class="ion-ios-cart"></i></span> Buy Now
                            </a>
                            <button class="btn btn-outline-primary add-to-cart mx-1" data-id="{{ produit.id }}">
                                <span><i class="ion-ios-cart"></i></span> Add to Cart
                            </button>

                            <a href="{{ path('app_commande_index') }}" class="btn btn-outline-success d-flex justify-content-center align-items-center mx-1">
                                <span><i class="ion-ios-eye"></i></span> View Cart
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".add-to-cart").forEach(button => {
                button.addEventListener("click", function () {
                    let productId = this.getAttribute("data-id");

                    fetch("{{ path('commande_add') }}", {
                        method: "POST",
                        body: JSON.stringify({ id: productId }),
                        headers: {
                            "Content-Type": "application/json",
                            "X-Requested-With": "XMLHttpRequest"
                        }
                    })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                document.getElementById("commande-count").innerText = data.commandeCount;
                                let message = document.getElementById("commande-message");
                                message.style.display = "block";
                                setTimeout(() => message.style.display = "none", 2000);
                            }
                        });
                });
            });
        });
    </script>
{% endblock %}
