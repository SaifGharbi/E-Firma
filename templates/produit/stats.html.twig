{% extends 'base_admin.html.twig' %}

{% block title %}Statistiques Produits{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h2 class="text-center fw-bold text-uppercase mb-4">Statistiques Produits</h2>

        <div class="row">
            <div class="col-md-4">
                <div class="card shadow-lg p-3 text-center">
                    <h5 class="fw-bold text-primary">Total Produits</h5>
                    <p class="fs-3">{{ totalProducts }}</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-lg p-3 text-center">
                    <h5 class="fw-bold text-success">Prix Moyen</h5>
                    <p class="fs-3">{{ avgPrice|number_format(2, '.', ',') }} TND</p>
                </div>
            </div>
        </div>

        <h3 class="mt-5 text-center">Produits par Catégorie</h3>
        <div class="row">
            <div class="col-md-6">
                <canvas id="barChart"></canvas>
            </div>
            <div class="col-md-6">
                <canvas id="pieChart"></canvas>
            </div>
        </div>

        <h3 class="mt-5 text-center">Top Catégories</h3>
        <div class="row">
            <div class="col-md-8 mx-auto">
                <canvas id="topCategoriesChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Include Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const categories = [
                {% for stat in productStats %}
                "{{ stat.category }}",
                {% endfor %}
            ];

            const productCounts = [
                {% for stat in productStats %}
                {{ stat.product_count }},
                {% endfor %}
            ];

            // Bar Chart
            new Chart(document.getElementById('barChart'), {
                type: 'bar',
                data: {
                    labels: categories,
                    datasets: [{
                        label: 'Nombre de Produits',
                        data: productCounts,
                        backgroundColor: 'rgba(75, 192, 192, 0.5)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });

            // Pie Chart
            new Chart(document.getElementById('pieChart'), {
                type: 'pie',
                data: {
                    labels: categories,
                    datasets: [{
                        label: 'Nombre de Produits',
                        data: productCounts,
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.5)',
                            'rgba(54, 162, 235, 0.5)',
                            'rgba(255, 206, 86, 0.5)',
                            'rgba(75, 192, 192, 0.5)',
                            'rgba(153, 102, 255, 0.5)',
                            'rgba(255, 159, 64, 0.5)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true
                }
            });

            // Top Categories Chart
            const topCategories = [
                {% for cat in topCategories %}
                "{{ cat.category }}",
                {% endfor %}
            ];

            const topProductCounts = [
                {% for cat in topCategories %}
                {{ cat.product_count }},
                {% endfor %}
            ];

            new Chart(document.getElementById('topCategoriesChart'), {
                type: 'bar',
                data: {
                    labels: topCategories,
                    datasets: [{
                        label: 'Top Catégories - Nombre de Produits',
                        data: topProductCounts,
                        backgroundColor: 'rgba(255, 159, 64, 0.5)',
                        borderColor: 'rgba(255, 159, 64, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });
    </script>
{% endblock %}