{% extends 'base.html.twig' %}

{% block title %}RendezVous Index{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mb-4 text-primary fw-bold">📅 My Appointments</h1>

        <!-- Search Bar -->
        <div class="d-flex justify-content-center mb-4">
            <input type="text" id="searchInput" class="form-control search-input w-50" placeholder="🔍 Search by ID, Date, or Status">
        </div>

        {% if rendez_vouses is empty %}
            <div class="alert alert-warning text-center p-4 rounded-4">
                <i class="fas fa-calendar-times fa-3x mb-2 text-warning"></i>
                <p class="mb-0">No appointments found. Schedule one today!</p>
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table custom-table text-center">
                    <thead>
                    <tr>
                        <th>📌 ID</th>
                        <th>📅 Date</th>
                        <th>📢 Status</th>
                        <th>⚙ Actions</th>
                    </tr>
                    </thead>
                    <tbody id="rendezVousTable">
                    {% for rendez_vou in rendez_vouses %}
                        <tr>
                            <td>{{ rendez_vou.id }}</td>
                            <td>{{ rendez_vou.date ? rendez_vou.date|date('Y-m-d H:i') : '' }}</td>
                            <td>
                                <span class="badge {{ rendez_vou.statut ? 'bg-success' : 'bg-warning' }}">
                                    {{ rendez_vou.statut ? 'Confirmed' : 'Pending' }}
                                </span>
                            </td>
                            <td>
                                <a href="{{ path('app_rendez_vous_show', {'id': rendez_vou.id}) }}" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye"></i> View
                                </a>
                                <a href="{{ path('app_rendez_vous_edit', {'id': rendez_vou.id}) }}" class="btn btn-outline-warning btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center">No records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}

        <!-- Manual Pagination -->
        <div class="d-flex justify-content-center mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    {% if currentPage > 1 %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_rendez_vous_index', {'page': currentPage - 1}) }}">« Prev</a>
                        </li>
                    {% endif %}

                    {% for page in 1..totalPages %}
                        <li class="page-item {% if page == currentPage %}active{% endif %}">
                            <a class="page-link" href="{{ path('app_rendez_vous_index', {'page': page}) }}">{{ page }}</a>
                        </li>
                    {% endfor %}

                    {% if currentPage < totalPages %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_rendez_vous_index', {'page': currentPage + 1}) }}">Next »</a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    </div>

    <!-- Live Search JavaScript -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const searchInput = document.getElementById("searchInput");
            const tableRows = document.querySelectorAll("#rendezVousTable tr");

            searchInput.addEventListener("input", function () {
                const searchTerm = this.value.toLowerCase().trim();

                tableRows.forEach(row => {
                    const id = row.cells[0].textContent.toLowerCase();
                    const date = row.cells[1].textContent.toLowerCase();
                    const status = row.cells[2].textContent.toLowerCase();
                    const isVisible = id.includes(searchTerm) || date.includes(searchTerm) || status.includes(searchTerm);

                    row.style.display = isVisible ? "table-row" : "none";
                });
            });
        });
    </script>

    <!-- Improved CSS for UI -->
    <style>
        .search-input {
            border-radius: 25px !important;
            padding: 10px 15px;
            border: 2px solid #007bff;
            transition: 0.3s ease-in-out;
        }

        .search-input:focus {
            border-color: #0056b3;
            box-shadow: 0 0 10px rgba(0, 123, 255, 0.3);
        }

        .custom-table {
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(10px);
            border-radius: 12px;
            overflow: hidden;
        }

        .custom-table th {
            background-color: #007bff;
            color: white;
            text-transform: uppercase;
            font-weight: bold;
            padding: 12px;
        }

        .custom-table tbody tr {
            transition: background 0.3s ease;
        }

        .custom-table tbody tr:hover {
            background: rgba(0, 123, 255, 0.1);
        }

        .badge {
            font-size: 1rem;
            padding: 0.4rem 0.8rem;
        }

        .btn-sm {
            font-size: 0.875rem;
            padding: 0.4rem 0.75rem;
            border-radius: 8px;
            transition: all 0.3s ease-in-out;
        }

        .btn-outline-primary:hover, .btn-outline-warning:hover {
            transform: scale(1.05);
        }

        .pagination .page-item.active .page-link {
            background-color: #007bff;
            border-color: #007bff;
            color: white;
        }

        .pagination .page-link {
            border-radius: 50px;
            margin: 0 5px;
            color: #007bff;
            transition: 0.3s ease-in-out;
        }

        .pagination .page-link:hover {
            background-color: #007bff;
            color: white;
        }
    </style>
{% endblock %}
