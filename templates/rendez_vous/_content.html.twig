<section class="ftco-section ftco-cart">
    <div class="container">
          <section class="ftco-section ftco-cart">
        <div class="container">
            <div class="row">
                <div class="col-md-12 ftco-animate">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h2>Rendezvous List</h2>
                        <div>
                            <a href="{{ path('app_rendez_vous_new') }}" class="btn btn-primary">Add Veterinaire Rendezvous</a>
                            <a href="{{ path('app_rendez_vous_new') }}" class="btn btn-secondary">Add Expert Rendezvous</a>
                            <a href="{{ path('app_service_new') }}" class="btn btn-success">Add New Service</a>
                        </div>
                    </div>

                    <div class="cart-list">
                        <table class="table">
                            <thead class="thead-primary">
                            <tr class="text-center">
                                <th></th>
                                <th>Rendezvous List</th>
                                <th></th>
                                <th>Service</th>
                                <th>Date</th>
                                <th>Status</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for rendezvous in rendezvousList %}
                                <tr class="text-center">
                                    <td class="product-remove">
                                        <a href="{{ path('app_rendez_vous_delete', {'id': rendezvous.id}) }}">
                                            <span class="ion-ios-close"></span>Delete
                                        </a>
                                         <a href="{{ path('app_rendez_vous_edit', {'id': rendezvous.id}) }}">
                                            <span class="ion-ios-close"></span>Edit
                                        </a>
                                    </td>

                                    <td class="product-name">
                                        <h3>{{ rendezvous.service.nom }}</h3>
                                        <p>{{ rendezvous.service.description }}</p>
                                    </td>

                                    <td class="image-prod">
                                        <div class="img" style="background-image:url({{ asset('FrontOffice/images/person-3.jpg') }})"></div>
                                    </td>

                                    <td class="price">{{ rendezvous.service.type }}</td>

                                    <td class="quantity">{{ rendezvous.date|date('Y-m-d H:i') }}</td>

                                    <td class="total">
                                    {{ rendezvous.statut ? 'treated' : 'untreated' }}
                                    <span class="badge badge-{{ rendezvous.statut ? 'success' : 'danger' }}">
                                        {{ rendezvous.statut ? 'Treated' : 'Untreated' }}
                                    </span>
                                    </td>
                                </tr>
                            {% else %}
                                <tr class="text-center">
                                    <td colspan="6">No rendezvous found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
    </div>
</section> 