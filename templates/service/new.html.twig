{% extends 'base.html.twig' %}

{% block title %}Add Service{% endblock %}

{% block body %}
    <div class="hero-wrap hero-bread" style="background-image: url('{{ asset('FrontOffice/images/bg_1.jpg') }}');">
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center">
                    <p class="breadcrumbs"><span class="mr-2"><a href="{{ path('app_home') }}">Home</a></span> <span>Add Service</span></p>
                    <h1 class="mb-0 bread">Add New Service</h1>
                </div>
            </div>
        </div>
    </div>

    <section class="ftco-section">
        <div class="container">
            <div class="row block-9">
                <div class="col-md-6 order-md-last d-flex">
                    {{ form_start(form, {'attr': {'class': 'bg-white p-5 contact-form'}}) }}
                    <div class="form-group">
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Service Name'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'placeholder': 'Price'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add Service" class="btn btn-primary py-3 px-5">
                    </div>
                    {{ form_end(form) }}
                </div>

                <div class="col-md-6 d-flex">
                    <div id="map" class="bg-white"></div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
