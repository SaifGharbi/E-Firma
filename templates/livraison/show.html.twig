{% extends 'base_admin.html.twig' %}

{% block title %}Livraison{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card shadow-lg">

            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>

                    <tr>
                        <th>Adresse</th>
                        <td>{{ livraison.adresse }}</td>
                    </tr>
                    <tr>
                        <th>Date de Livraison</th>
                        <td>{{ livraison.dateLivraison ? livraison.dateLivraison|date('Y-m-d') : 'N/A' }}</td>
                    </tr>
                    <tr>
                        <th>Statut</th>
                        <td>
                            {% if livraison.statut %}
                                <span class="badge bg-success">Confirmed</span>
                            {% else %}
                                <span class="badge bg-danger">Pending</span>
                            {% endif %}
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <a href="{{ path('app_livraison_index') }}" class="btn btn-secondary">Back to List</a>
                <a href="{{ path('app_livraison_edit', {'id': livraison.id}) }}" class="btn btn-warning">Edit</a>
                {{ include('livraison/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
