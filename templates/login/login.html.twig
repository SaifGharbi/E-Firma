{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('FrontOffice/css/style.css') }}">
{% endblock %}

{% block body %}
    <section class="login-section" style="position: relative; overflow: hidden; background-image: none !important;">
    <div style="
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('{{ asset('FrontOffice/images/bg_3.jpg') }}');
        background-size: cover;
        background-position: center;
        filter: blur(8px);
        z-index: -1;">
    </div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="login-box">
                        <h2 class="text-center">Welcome Back</h2>
                        <p class="text-center text-muted">Sign in to continue</p>

                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="alert alert-success text-center">
                                You are logged in as <strong>{{ app.user.userIdentifier }}</strong>.
                                <a href="{{ path('app_logout') }}" class="logout-link">Logout</a>
                            </div>
                        {% endif %}

                        <form method="post" class="login-form">
                            <div class="form-group">
                                <label for="username">Email</label>
                                <input type="email" value="{{ last_username }}" name="_username" id="username"
                                       class="form-control" autocomplete="email" required autofocus>
                            </div>

                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" name="_password" id="password"
                                       class="form-control" autocomplete="current-password" required>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                            <div class="form-group d-flex justify-content-between">
                                <a href="#" class="text-muted">Forgot password?</a>
                            </div>

                            <button class="btn btn-block btn-primary" type="submit">Sign in</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
